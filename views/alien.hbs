<div class="container-fluid wrapper">

    <section class="row" style="min-height: 100vh">

        <div class="col-md-1 bg-dark"></div>

        <div class="col-md-3 bg-secondary">
            <h1 class="mt-3 text-light">{{ alien.name }}</h1>
            <img class="img-fluid rounded mb-5" src="{{ alien.image }}"/>
        </div>
        <div class="col-md-7">
            <div class="alert alert-dark mt-4" role="alert">
                <h2>Description</h2>
            </div>
            <p>{{ alien.description }}</p>
            <div class="alert alert-dark mt-4" role="alert">
                <h3>Behaviour</h3>
            </div>
            <p>{{ alien.behaviour }}</p>
            <div class="alert alert-dark mt-4" role="alert">
                <h3>Date</h3>
            </div>
            {{#if alien.date}}
                <dt>Posted </dt>
                <dd>{{ alien.date }}</dd>
            {{/if}}
            {{#if alien.updateDate}}
                <dt>Updated </dt>
                <dd>{{ alien.updateDate }}</dd>
            {{/if}}
            
        </div>

        <div class="col-md-1 bg-dark"></div>

